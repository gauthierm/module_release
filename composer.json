{
    "name": "silverorange/module_release",
    "description": "Command-line tool to release a new version of a composer module.",
    "type": "library",
    "keywords": [ "composer", "release", "git", "package" ],
    "homepage": "https://github.com/silverorange/module_release",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Gauthier",
            "email": "mike@silverorange.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-json": "*",
        "monolog/monolog": "^1.19.0",
        "pear/console_commandline": "^1.1.10"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.6.0"
    },
    "scripts": {
        "lint": [
            "phpcs --standard=PSR2 src/"
        ]
    },
    "bin": [
        "bin/module-release"
    ],
    "autoload": {
        "psr-4": {
            "silverorange\\ModuleRelease\\" : "src/"
        }
    }
}
